int i,j;
float mV;
int readval=A0;
void setup() {
  Serial.begin(9600);
  pinMode(A0,INPUT);
  for (i=5; i<=10; i++)
  {
    pinMode(i,OUTPUT);
  }}
void loop() {
  float pot;
 pot=analogRead(readval);
 Serial.println(mV);
 mV=(7.0/1023.0)*pot;
 if(mV>5.01){
  digitalWrite (10,HIGH);
  delay(200);
  digitalWrite (10,LOW);}
  else{
 if(mV>0.99){
    for(i=5;i<=4+(int)mV;i++){
      for(j=5;j<=i;j++){
      digitalWrite (j,HIGH);
    delay(200);}}}}}
 
